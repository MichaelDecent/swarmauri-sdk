[build-system]
requires = ["setuptools>=69.0", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "{{ PROJECT_ROOT.replace('_', '-') }}"
version = "0.0.1"
description = "Peagen project scaffold generated by peagen init."
authors = [{name = "Your Team"}]
requires-python = ">=3.10"

dependencies = [
  "peagen=={{ peagen_version }}",
  # Pin the template-set wheel once itâ€™s published
  "peagen-template-{{ template_set | replace('_', '-') }}>=0.1.0",
]

[tool.setuptools.packages.find]
where = ["src"]
