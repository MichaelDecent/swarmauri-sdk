{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/ptree.schema.json",
  "title": "Ptree Schema (v1.0.0)",
  "schemaVersion": "1.0.0",
  "type": "object",
  "properties": {
    "schemaVersion": {
      "type": "string",
      "const": "1.0.0",
      "description": "Ptree schema version"
    },
    "ptree": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "FILE_NAME": {
            "type": "string"
          },
          "RENDERED_FILE_NAME": {
            "type": "string"
          },
          "PROCESS_TYPE": {
            "type": "string",
            "enum": ["COPY", "GENERATE"],
            "description": "Must be either COPY or GENERATE"
          },
          "AGENT_PROMPT_TEMPLATE": {
            "type": "string"
          },
          "PROJECT_NAME": {
            "type": "string"
          },
          "PACKAGE_NAME": {
            "type": "string"
          },
          "MODULE_NAME": {
            "type": ["string", "null"]
          },
          "EXTRAS": {
            "type": "object",
            "properties": {
              "PURPOSE": { "type": "string" },
              "DESCRIPTION": { "type": "string" },
              "REQUIREMENTS": {
                "type": "array",
                "items": { "type": "string" }
              },
              "EXAMPLES": {
                "type": "array",
                "items": {}
              },
              "DEPENDENCIES": {
                "type": "array",
                "items": { "type": "string" }
              }
            },
            "additionalProperties": true
          }
        },
        "required": [
          "FILE_NAME",
          "RENDERED_FILE_NAME",
          "PROCESS_TYPE",
          "AGENT_PROMPT_TEMPLATE",
          "PROJECT_NAME",
          "PACKAGE_NAME",
          "MODULE_NAME",
          "EXTRAS"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": ["schemaVersion", "ptree"],
  "additionalProperties": false
}
